#include <iostream>
#include <cmath>
using namespace std;

// Base class: Square
class Square {
protected:
    double side;

public:
    // Constructor
    Square(double s = 0.0) {
        side = s;
        cout << "Square constructor called. Side = " << side << endl;
    }
    
    // Destructor
    ~Square() {
        cout << "Square destructor called. Side = " << side << endl;
    }
    
    // Member function to calculate perimeter
    double getPeri() const {
        return 4 * side;
    }
    
    // Member function to calculate area
    double getArea() const {
        return side * side;
    }
    
    // Display square information
    void displaySquare() const {
        cout << "\n--- Square Information ---" << endl;
        cout << "Side length: " << side << endl;
        cout << "Perimeter: " << getPeri() << endl;
        cout << "Area: " << getArea() << endl;
    }
};

// Derived class: Cube (inherits from Square)
class Cube : public Square {
public:
    // Constructor
    Cube(double s = 0.0) : Square(s) {
        cout << "Cube constructor called. Side = " << side << endl;
    }
    
    // Destructor
    ~Cube() {
        cout << "Cube destructor called. Side = " << side << endl;
    }
    
    // Override getArea to calculate surface area of cube (6 faces)
    double getArea() const {
        return 6 * side * side;
    }
    
    // Member function to calculate volume
    double getVolume() const {
        return side * side * side;
    }
    
    // Display cube information
    void displayCube() const {
        cout << "\n--- Cube Information ---" << endl;
        cout << "Side length: " << side << endl;
        cout << "Surface Area: " << getArea() << endl;
        cout << "Volume: " << getVolume() << endl;
    }
};

int main() {
    cout << "=== Creating Square Object ===" << endl;
    Square sq(5.0);
    sq.displaySquare();
    
    cout << "\n=== Creating Cube Object ===" << endl;
    Cube cb(4.0);
    cb.displayCube();
    
    // Using accessor functions
    cout << "\n=== Using Member Functions ===" << endl;
    cout << "Square perimeter: " << sq.getPeri() << endl;
    cout << "Square area: " << sq.getArea() << endl;
    cout << "Cube surface area: " << cb.getArea() << endl;
    cout << "Cube volume: " << cb.getVolume() << endl;
    
    cout << "\n=== Program Ending ===" << endl;
    
    return 0;
}