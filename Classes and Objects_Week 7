#include <iostream>
#include <string>
using namespace std;

class Employee {
private:
    // Data members
    string name;
    int age;
    int serviceYear;
    double salary;

public:
    // Parameterized Constructor
    Employee(string n, int a, int sy, double s) {
        name = n;
        age = a;
        serviceYear = sy;
        salary = s;
        cout << "Employee object created for: " << name << endl;
    }
    
    // Destructor
    ~Employee() {
        cout << "Employee object destroyed for: " << name << endl;
    }
    
    // Accessor member functions (getters)
    string getName() const {
        return name;
    }
    
    int getAge() const {
        return age;
    }
    
    int getServiceYear() const {
        return serviceYear;
    }
    
    double getSalary() const {
        return salary;
    }
    
    // Additional function to display employee details
    void displayInfo() const {
        cout << "\n--- Employee Information ---" << endl;
        cout << "Name: " << name << endl;
        cout << "Age: " << age << " years" << endl;
        cout << "Service Years: " << serviceYear << " years" << endl;
        cout << "Salary: $" << salary << endl;
    }
};

int main() {
    // Create Employee objects using parameterized constructor
    Employee emp1("John Smith", 35, 10, 75000.50);
    Employee emp2("Sarah Johnson", 28, 5, 62000.00);
    Employee emp3("Michael Brown", 42, 18, 95000.75);
    
    // Using accessor functions to get employee data
    cout << "\n=== Using Accessor Functions ===" << endl;
    cout << "Employee 1 Name: " << emp1.getName() << endl;
    cout << "Employee 1 Age: " << emp1.getAge() << endl;
    cout << "Employee 1 Service Years: " << emp1.getServiceYear() << endl;
    cout << "Employee 1 Salary: $" << emp1.getSalary() << endl;
    
    // Display all employee information
    cout << "\n=== All Employees Information ===" << endl;
    emp1.displayInfo();
    emp2.displayInfo();
    emp3.displayInfo();
    
    cout << "\n=== Program Ending - Destructors Will Be Called ===" << endl;
    
    return 0;
}