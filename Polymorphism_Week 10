#include "Employee.h"
#include <iostream>
using namespace std;

// Constructor
Employee::Employee(string fName, char init, string lName) {
    firstName = fName;
    initial = init;
    lastName = lName;
    cout << "Employee base constructor called for: " << getFullName() << endl;
}

// Destructor
Employee::~Employee() {
    cout << "Employee base destructor called for: " << getFullName() << endl;
}

// Accessor functions
string Employee::getFirstName() const {
    return firstName;
}

char Employee::getInitial() const {
    return initial;
}

string Employee::getLastName() const {
    return lastName;
}

string Employee::getFullName() const {
    string fullName = firstName;
    if (initial != ' ') {
        fullName += " " + string(1, initial) + ".";
    }
    fullName += " " + lastName;
    return fullName;
}

// Mutator functions
void Employee::setFirstName(string fName) {
    firstName = fName;
}

void Employee::setInitial(char init) {
    initial = init;
}

void Employee::setLastName(string lName) {
    lastName = lName;
}